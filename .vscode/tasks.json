{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Typescript build",
            "type": "shell",
            "command": "tsc -w -p .",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Sass Compile",
            "type": "shell",
            "command": "node-sass scss/**/* index.css",
            "group": "build"
        }
    ]
}
